{
    "manifest_version": 3,
    "name": "Oráculo de Eternia - Wallapop Connector",
    "version": "1.0.0",
    "description": "Captura ofertas de Wallapop y las envía al Oráculo de Eternia",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*.wallapop.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.wallapop.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}